<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/drawer_filter_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<LinearLayout-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="fill_parent"-->
    <!--android:orientation="vertical">-->
    <fragment
        android:name="com.rorlig.babylog.ui.widget.DateTimeHeaderFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

    </fragment>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:id="@+id/weightLayout"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_weight"
            android:layout_marginLeft="10dp"
            android:id="@+id/weightLabel"
            android:textColor="@color/text_color_main"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="--"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/weightPounds"
            android:textColor="@color/text_color_main"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lbs"
            android:layout_marginLeft="10dp"
            android:id="@+id/weightPoundLabel"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_main"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="--"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/weightOunces"
            android:textColor="@color/text_color_main"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oz"
            android:layout_marginLeft="10dp"
            android:id="@+id/weightOuncesLabel"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_main"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weightLayout"
        android:id="@+id/heightLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_height"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/heightLabel"
            android:textColor="@color/text_color_main"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hint_decimal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:numeric="decimal"
            android:maxLength="5"
            android:id="@+id/heightInches"
            android:textColor="@color/text_color_main"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inches"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/heightInches"
            android:id="@+id/heightInchesLabel"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_main"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heightLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEAD MEASUREMENT"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/headLabel"
            android:textColor="@color/text_color_main"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hint_decimal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:numeric="decimal"
            android:maxLength="5"
            android:id="@+id/headInches"
            android:textColor="@color/text_color_main"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_inches"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/headInchesLabel"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_main"/>

    </LinearLayout>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_save"
        android:background="#1E88E5"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>