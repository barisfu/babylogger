    <ListView
        android:id="@+id/sleep_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        />

    <RelativeLayout android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_sleep_normal"
            android:id="@+id/icon_no_diaper_change"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_sleep"
            android:id="@+id/errorText"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/icon_no_diaper_change"/>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_sleep"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:background="@color/primary_gray_dark"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/errorText"/>
    </RelativeLayout>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_sleep_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_colorNormal="@color/primary_gray_dark"
        fab:fab_colorPressed="@color/primary_gray"
        fab:fab_icon="@drawable/ic_add_white"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>
</RelativeLayout>